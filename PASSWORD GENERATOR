import tkinter as tk
from tkinter import messagebox
import random
import string
def generate_password():
    length = int(entry.get())
    all_characters = string.ascii_letters + string.digits + string.punctuation
    password = ''.join(random.choice(all_characters) for _ in range(length))
    password_var.set(password)
    password_column.insert(tk.END, password + '\n')
root = tk.Tk()
root.title("Password Generator")
tk.Label(root, text="Password Length:").pack(pady=10)
entry = tk.Entry(root)
entry.pack(pady=10)
entry.insert(0, "8")
password_var = tk.StringVar()
tk.Label(root, text="Generated Password:").pack(pady=10)
tk.Label(root, textvariable=password_var, font=("Helvetica", 14)).pack(pady=20)
generate_btn = tk.Button(root, text="Generate Password", command=generate_password)
generate_btn.pack(pady=10)
tk.Label(root, text="Password History:").pack(pady=10)
password_column = tk.Text(root, width=40, height=10)
password_column.pack(pady=5)
root.mainloop()
